.page-control
    
    background: $bg-color
    overflow: hidden
    
    .screen-notconnected
        left: 50%
        top: 50%
        transform: translateX(-50%) translateY(-50%)
        position: absolute
        font-size: 2em
        color: rgba(#FFF, 0.2)

    .top
        background: $primary-color
        padding: 0 10px
        line-height: 25px
        font-size: 12px
        color: #FFF
    
    .nav-action
        padding: 10px
        background: lighten($bg-color, 10%)
        line-height: 35px

    .role-screen-id
        width: 60px

    .conn-state
        float: right

    .conn-state-item
        float: left
        padding: 5px 10px
        line-height: 25px
        font-size: 0.9em
        font-weight: 300
        margin-right: 1px
        color: #FFF
        user-select: none
    
    .conn-state-item[status="connecting"]
        background: #898989

    .conn-state-item[status="connected"]
        background: #22ac38

    .conn-state-item[status="disconnected"]
        background: #ff4d4d

    .conn-state-item[status="reconnect-failed"]
        background: #ff4d4d

    .conn-state-item[status="reconnecting"]
        background: #f19149

    .main
        position: absolute
        left: 0
        right: 0
        bottom: 0
        top: 85px

    .main-left
        left: 0
        top: 0
        width: 50%
        height: 100%
        position: absolute

    .main-right
        left: 50%
        width: 50%
        top: 0
        height: 100%
        position: absolute

    .module-title
        color: $secondary-text-color
        padding: 0 10px
        //line-height: 50px
        h1, h2, h3, h4
            display: inline-block
            line-height: 45px
            margin: 0
            padding: 0
        input, button
            margin-top: 5px
            //vertical-align: top
        label
            line-height: 40px
            color: #FFF

    .module-main
        padding: 10px
        position: relative

    .role-keyword-filter
        width: 100%
        height: 100px
    
    .role-module-assets
        position: relative
        width: 100%
        height: 100%

        .module-main
            box-sizing: border-box
            position: absolute
            left: 0
            width: 100%
            top: 45px
            bottom: 0
            overflow-y: auto

    .assets-item
        display: inline-block
        width: 50%
        box-sizing: border-box
        padding: 10px
        transition: background-color .2s
        cursor: pointer

        &:hover
            background: rgba($link-color, 0.5)
    
    .assets-inner
        width: 100%
        position: relative
        background: #000
        outline: 3px solid rgba(#000, 0.5)
        &:before
            content: ""
            display: block
            padding-top: 75%

    .assets-item-active
        background: rgba($focus-color, 0.8) !important

    .assets-img
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        background-position: 50% 50%
        background-repeat: no-repeat
        background-size: cover
    
    .assets-type-video
        position: absolute
        left: 50%
        top: 50%
        transform: translateX(-50%) translateY(-50%)
        background: url(../img/video.png)
        width: 48px
        height: 38px
        opacity: 0.8

    .assets-desc
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        background: rgba(#000, 0.8)
        color: #FFF
        padding: 10px
        box-sizing: border-box
        cursor: text
    
    .role-danmaku-duration, .role-danmaku-maxline
        width: 50px