.page-wall
    
    background: #000
    overflow: hidden

    #bg
        position: absolute
        left: 0
        width: 100%
        top: 0
        height: 100%
        z-index: 0
        overflow: hidden
    
    .asset-item
        transition: opacity .5s
        opacity: 0.01
        &.show
            opacity: 1
    
    .asset-img
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        background-position: 50% 50%
        background-repeat: no-repeat
        background-size: cover
    
    .asset-video
        position: absolute
        top: 50%
        left: 50%
        transform: translateX(-50%) translateY(-50%)
        width: 100%
        height: auto
    
    .asset-iframe
        width: 100%
        height: 100%
        border: 0

    #float-window
        position:absolute
        left: 20px
        bottom: 20px
        text-align: right
        font-size: 30px
        padding: 20px
        background: rgba(0,0,0,0.5)
        color: #FFF
        border-radius: 10px
        pointer-events: none
        transition: opacity .2s
        opacity: 0
        z-index: 100
        &.show
            opacity: 1

    #danmaku
        position: absolute
        left: 0
        width: 100%
        top: 0
        height: 100%
        z-index: 10
        overflow: hidden
        text-shadow: 1px 1px 4px #000,-1px -1px 4px #000,1px -1px 4px #000,-1px 1px 4px #000
        transition: opacity .2s
        opacity: 0
        &.show
            opacity: 1

        .danmaku-item
            width: auto
            white-space: nowrap
            font-size: 40px
            padding: 10px
            background: rgba(0,0,0,0.5)
            position: absolute
            left: 0
            top: 0