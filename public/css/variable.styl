$theme-style-light = true

$primary-color = #3b7fe0
$secondary-color = #F0F0F0
$highlight-color = #00b7ee

$focus-color = #FFDF00
$focus-bg-color = lighten($focus-color, 90%)
$focus-border = 1px solid $focus-color
$focus-box-shadow = 0 0 5px $focus-color

$bg-color = #34373b
$text-color = #FFF
$secondary-text-color = #00b7ee

$link-color = #119EEA
$link-color-hover = lighten($link-color, 20%)

$link-dark-color = #0DC6FB      //link color in dark bg
$link-dark-color-hover = lighten($link-dark-color, 10%)

$ui-border-color = #666
$ui-bg-color = $bg-color
$ui-border-color-hover = lighten($ui-border-color, 10%)
$ui-bg-color-hover = darken($ui-bg-color, 80%)

$button-color = #849eb0
$button-color-hover = #6aadd4
$button-color-active = #0083ab
$button-def-color = $primary-color
$button-def-color-hover = #00b7ee
$button-def-color-active = #0083ab

$textbox-border-color = $ui-border-color
$textbox-bg-color = $ui-bg-color
$textbox-hover-border-color = $ui-border-color-hover
$textbox-hover-bg-color = $ui-bg-color-hover

$control-left-panel-width = 30%
$control-asset-column = 4
$control-asset-width = unit(100/$control-asset-column, '%')